= form_for current_user.work_entries.new do |f|
  %div{style: "padding-bottom: 10px;"}
    %strong New timer:
    &nbsp;
    = f.select :project_id, project_options_for_select(exclude_inactive: true, selected_id: current_user.last_project.try(:id)), {}, class: "form-control", style: "display: inline-block; width: 200px;"
    &nbsp;
    = f.text_field :invoice_notes, class: "form-control inline", placeholder: "Whatcha workin on?", style: "width: 250px;"
    &nbsp;
    %button.btn.btn-success.btn-sm{type: "submit"} #{glyph("play")} Start
    %button.btn.btn-default.btn-sm{name: "submit_edit", type: "submit"} #{glyph("pencil")}
