
= breadcrumbs [:user, :clients, :client, :projects, :project, :edit]

%h1 Edit project "#{@project.name}"

= form_for @project do |f|
  = show_errors_for @project

  %table.form
    %tr
      %td= f.label :client_id, "Client"
      %td= f.select :client_id, @clients.collect{ |c| [ c.name, c.id ] }, {}, class: "form-control"
    %tr
      %td= f.label :name
      %td= f.text_field :name, class: "form-control", autofocus: true
    %tr
      %td= f.label :is_billable, "Billable?"
      %td= f.check_box :is_billable
    %tr
      %td
      %td= f.submit "Save", class: "btn btn-primary"
